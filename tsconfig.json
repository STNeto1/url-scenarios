{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ES2020", "ESNext"],
    "paths": {
      "*": ["src/*"]
    },
    "allowJs": true,
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
